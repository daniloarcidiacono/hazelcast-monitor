		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-websocket</artifactId>
			<version>2.0.1.RELEASE</version>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
			<version>2.0.1.RELEASE</version>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-json</artifactId>
			<version>2.0.1.RELEASE</version>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<version>2.0.1.RELEASE</version>
			<scope>test</scope>
		</dependency>
    </dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>io.github.daniloarcidiacono</groupId>
				<artifactId>typescript-mapper-maven-plugin</artifactId>
				<version>0.0.1-SNAPSHOT</version>
				<configuration>
					<simplifyResult>false</simplifyResult>
					<basePackage>it.xdnl.hazelcast.monitor.agent</basePackage>
					<preamble>
						<param>Hazelcast Monitor ${project.version} DTOs</param>
						<param>-------------------------------------</param>
						<param>This file is automatically generated by TypescriptMapper.</param>
						<param>Do not modify this file -- YOUR CHANGES WILL BE ERASED!</param>
					</preamble>
					<suffix>DTO</suffix>
					<mappings>
						<it.xdnl.hazelcast.monitor.agent.helper>internals.dto.ts</it.xdnl.hazelcast.monitor.agent.helper>
						<it.xdnl.hazelcast.monitor.agent.dto>hazelcast-monitor.dto.ts</it.xdnl.hazelcast.monitor.agent.dto>
						<it.xdnl.hazelcast.monitor.agent.dto.topic>topics.dto.ts</it.xdnl.hazelcast.monitor.agent.dto.topic>
						<it.xdnl.hazelcast.monitor.agent.dto.request>hazelcast-monitor.dto.ts</it.xdnl.hazelcast.monitor.agent.dto.request>
						<it.xdnl.hazelcast.monitor.agent.dto.response>hazelcast-monitor.dto.ts</it.xdnl.hazelcast.monitor.agent.dto.response>
						<it.xdnl.hazelcast.monitor.agent.product>topic-products.dto.ts</it.xdnl.hazelcast.monitor.agent.product>
					</mappings>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>map</goal>
						</goals>
						<phase>compile</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${jdk.version}</source>
					<target>${jdk.version}</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
